<script>
// State
let currentFolder = 'inbox';
let currentEmail = null;
let emails = [];
let currentPage = 1;
let totalEmails = 0;
let lastEmailId = 0;

const colors = ['#f86d31', '#3b82f6', '#10b981', '#8b5cf6', '#ec4899', '#f59e0b', '#06b6d4', '#6366f1'];
const getColor = s => colors[[...s].reduce((a,c) => a + c.charCodeAt(0), 0) % colors.length];

// Templates
const templates = {
    welcome: { subject: 'Welcome to our team!', body: 'Hi [Name],\n\nWelcome to the team! We\'re excited to have you on board.\n\nHere\'s what you need to know to get started:\n‚Ä¢ Your first week schedule is attached\n‚Ä¢ Please complete your profile setup\n‚Ä¢ Join our team channel for updates\n\nLooking forward to working with you!\n\nBest regards' },
    followup: { subject: 'Following up on our conversation', body: 'Hi [Name],\n\nI wanted to follow up on our recent conversation about [topic].\n\nHave you had a chance to review the materials I sent? I\'d love to hear your thoughts.\n\nLet me know if you have any questions.\n\nBest regards' },
    meeting: { subject: 'Meeting Request: [Topic]', body: 'Hi [Name],\n\nI\'d like to schedule a meeting to discuss [topic].\n\nWould any of these times work for you?\n‚Ä¢ [Date/Time Option 1]\n‚Ä¢ [Date/Time Option 2]\n‚Ä¢ [Date/Time Option 3]\n\nPlease let me know your availability.\n\nBest regards' },
    thanks: { subject: 'Thank you!', body: 'Hi [Name],\n\nThank you so much for [reason].\n\nI really appreciate your [help/time/support]. It made a real difference.\n\nPlease let me know if there\'s anything I can do to return the favor.\n\nBest regards' },
    intro: { subject: 'Introduction: [Your Name] <> [Their Name]', body: 'Hi [Name],\n\nI hope this email finds you well. I wanted to reach out and introduce myself.\n\nMy name is [Your Name], and I [brief background].\n\nI\'d love to connect and learn more about your work in [their field].\n\nWould you be open to a brief call sometime this week?\n\nBest regards' }
};

document.addEventListener('DOMContentLoaded', () => {
    loadFolder('inbox');
    loadCounts();
    startPolling();
    requestNotificationPermission();
    
    document.addEventListener('click', (e) => {
        if (!e.target.closest('.user-menu')) document.getElementById('user-dropdown').classList.remove('open');
        if (!e.target.closest('.template-dropdown')) document.getElementById('template-menu').classList.remove('open');
    });
});

function toggleUserMenu() { event.stopPropagation(); document.getElementById('user-dropdown').classList.toggle('open'); }
function toggleTemplateMenu() { event.stopPropagation(); document.getElementById('template-menu').classList.toggle('open'); }

function loadTemplate(name) {
    const t = templates[name];
    if (t) { document.getElementById('compose-subject').value = t.subject; document.getElementById('compose-body').value = t.body; openCompose(); }
    document.getElementById('template-menu').classList.remove('open');
}

function saveAsTemplate() { showToast('Template saved!', 'success'); document.getElementById('template-menu').classList.remove('open'); }

function formatText(type) {
    const textarea = document.getElementById('compose-body');
    const start = textarea.selectionStart, end = textarea.selectionEnd;
    const text = textarea.value, selected = text.substring(start, end);
    let formatted = selected;
    switch(type) {
        case 'bold': formatted = `**${selected}**`; break;
        case 'italic': formatted = `*${selected}*`; break;
        case 'underline': formatted = `_${selected}_`; break;
        case 'strikethrough': formatted = `~~${selected}~~`; break;
        case 'list': formatted = `‚Ä¢ ${selected}`; break;
        case 'numbered': formatted = `1. ${selected}`; break;
        case 'link': const url = prompt('Enter URL:'); if (url) formatted = `[${selected || 'Link'}](${url})`; break;
    }
    textarea.value = text.substring(0, start) + formatted + text.substring(end);
    textarea.focus();
}

function attachFile() {
    const input = document.createElement('input');
    input.type = 'file'; input.multiple = true;
    input.onchange = (e) => { const files = Array.from(e.target.files); showToast(`${files.length} file(s) attached`, 'success'); };
    input.click();
}

async function requestNotificationPermission() {
    if ('Notification' in window && Notification.permission === 'default') await Notification.requestPermission();
}

function startPolling() { setInterval(checkNewEmails, 15000); setInterval(loadCounts, 30000); }

async function checkNewEmails() {
    if (currentFolder !== 'inbox') return;
    try {
        const r = await fetch(`/api/emails?folder=inbox&check_new=1&last_id=${lastEmailId}`, {credentials: 'same-origin'});
        const data = await r.json();
        if (data.success && data.new_count > 0) showNewEmailBanner(data.new_count, data.latest_email);
    } catch(e) {}
}

function showNewEmailBanner(count, email) {
    document.getElementById('new-email-text').textContent = count === 1 ? '1 new email' : count + ' new emails';
    document.getElementById('new-email-banner').classList.add('show');
    if (Notification.permission === 'granted' && email) new Notification('New Email', { body: `${email.from_name || email.from_email}: ${email.subject || '(no subject)'}`, icon: '/static/images/logo.png' });
    setTimeout(() => document.getElementById('new-email-banner').classList.remove('show'), 6000);
}

function loadNewEmails() { document.getElementById('new-email-banner').classList.remove('show'); loadFolder('inbox'); }

async function loadCounts() {
    try {
        const r = await fetch('/api/counts', {credentials: 'same-origin'});
        const data = await r.json();
        if (data.success) {
            updateCount('inbox', data.counts.inbox_unread);
            const badge = document.getElementById('nav-badge');
            if (data.counts.inbox_unread > 0) { badge.textContent = data.counts.inbox_unread > 99 ? '99+' : data.counts.inbox_unread; badge.style.display = 'flex'; }
            else { badge.style.display = 'none'; }
        }
    } catch(e) {}
}

function updateCount(folder, count) {
    const el = document.getElementById('count-' + folder);
    if (el) { if (count > 0) { el.textContent = count; el.style.display = 'flex'; } else { el.style.display = 'none'; } }
}

async function loadFolder(folder, search = '') {
    currentFolder = folder; currentEmail = null; currentPage = 1;
    document.querySelectorAll('.folder-item').forEach(el => el.classList.remove('active'));
    document.querySelector(`[data-folder="${folder}"]`)?.classList.add('active');
    document.getElementById('email-view-panel').classList.remove('open');
    document.getElementById('email-list').innerHTML = '<div class="empty-state"><div class="spinner"></div></div>';
    document.getElementById('email-view').innerHTML = '<div class="empty-state"><div class="empty-icon"><i class="fas fa-envelope-open"></i></div><div class="empty-title">No message selected</div><div class="empty-text">Select an email to read</div></div>';
    await fetchEmails(folder, search);
}

async function fetchEmails(folder, search = '') {
    try {
        let url = `/api/emails?folder=${folder}&page=${currentPage}`;
        if (search) url += `&search=${encodeURIComponent(search)}`;
        const r = await fetch(url, {credentials: 'same-origin'});
        const data = await r.json();
        if (data.success) { emails = data.emails; totalEmails = data.total || emails.length; if (emails.length > 0) lastEmailId = Math.max(...emails.map(e => e.id)); renderEmailList(); }
    } catch(e) { document.getElementById('email-list').innerHTML = '<div class="empty-state"><div class="empty-icon" style="background:#fef2f2;"><i class="fas fa-exclamation-circle" style="color:#fca5a5;"></i></div><div class="empty-title">Failed to load</div></div>'; }
}

function renderEmailList() {
    const container = document.getElementById('email-list');
    if (!emails || emails.length === 0) { container.innerHTML = '<div class="empty-state"><div class="empty-icon"><i class="fas fa-inbox"></i></div><div class="empty-title">No emails</div><div class="empty-text">Your ' + currentFolder + ' is empty</div></div>'; return; }
    
    let html = '';
    if (currentFolder === 'inbox' && currentPage === 1) {
        html += '<div class="inbox-ad" onclick="window.open(\'https://sendbaba.com/campaigns\')"><div class="inbox-ad-icon">üìß</div><div class="inbox-ad-content"><div class="inbox-ad-title">Launch email campaigns that convert</div><div class="inbox-ad-text">Reach millions with SendBaba\'s campaign tools</div></div><span class="inbox-ad-label">Ad</span></div>';
    }
    
    html += emails.map(e => {
        const name = e.from_name || e.from_email?.split('@')[0] || 'Unknown';
        const initial = name[0].toUpperCase();
        const color = getColor(name);
        const time = formatDate(e.received_at);
        const preview = (e.preview || e.body_text || '').substring(0, 80);
        return `<div class="email-item ${e.is_read ? '' : 'unread'} ${currentEmail === e.id ? 'active' : ''}" data-id="${e.id}" onclick="viewEmail(${e.id})">
            <input type="checkbox" class="email-checkbox" onclick="event.stopPropagation()">
            <div class="email-avatar" style="background:${color}">${initial}</div>
            <div class="email-content">
                <div class="email-row1"><span class="email-sender">${escapeHtml(name)} <span class="e2e" title="End-to-End Encrypted"><i class="fas fa-lock"></i></span></span><span class="email-time">${time}</span></div>
                <div class="email-subject">${escapeHtml(e.subject || '(no subject)')}</div>
                <div class="email-preview">${escapeHtml(preview)}</div>
                <div class="email-tags"><span class="email-tag encrypted"><i class="fas fa-lock"></i> Encrypted</span>${e.has_attachments ? '<span class="email-tag attachment"><i class="fas fa-paperclip"></i></span>' : ''}</div>
            </div>
            <i class="fa${e.is_starred ? 's' : 'r'} fa-star email-star ${e.is_starred ? 'active' : ''}" onclick="event.stopPropagation(); toggleStar(${e.id})"></i>
        </div>`;
    }).join('');
    container.innerHTML = html;
    document.getElementById('pagination-info').textContent = `${(currentPage-1)*50+1}-${Math.min(currentPage*50, totalEmails)}`;
}

function escapeHtml(text) { if (!text) return ''; const d = document.createElement('div'); d.textContent = text; return d.innerHTML; }

function formatDate(dateStr) {
    if (!dateStr) return '';
    const d = new Date(dateStr), now = new Date(), diff = now - d;
    if (diff < 60000) return 'Now';
    if (diff < 3600000) return Math.floor(diff / 60000) + 'm';
    if (diff < 86400000 && d.getDate() === now.getDate()) return d.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
    if (diff < 604800000) return d.toLocaleDateString([], {weekday: 'short'});
    return d.toLocaleDateString([], {month: 'short', day: 'numeric'});
}

async function viewEmail(id) {
    currentEmail = id;
    document.querySelectorAll('.email-item').forEach(el => { el.classList.remove('active'); if (parseInt(el.dataset.id) === id) { el.classList.add('active'); el.classList.remove('unread'); } });
    document.getElementById('email-view-panel').classList.add('open');
    document.getElementById('email-view').innerHTML = '<div class="empty-state"><div class="spinner"></div></div>';
    try {
        const r = await fetch(`/api/email/${id}`, {credentials: 'same-origin'});
        const data = await r.json();
        if (data.success) { renderEmailView(data.email); loadCounts(); }
    } catch(e) { document.getElementById('email-view').innerHTML = '<div class="empty-state"><div class="empty-title">Failed to load</div></div>'; }
}

function renderEmailView(email) {
    const name = email.from_name || email.from_email?.split('@')[0] || 'Unknown';
    const color = getColor(name);
    const date = new Date(email.received_at);
    const dateStr = date.toLocaleDateString('en-US', {weekday: 'long', day: 'numeric', month: 'long', year: 'numeric'});
    const timeStr = date.toLocaleTimeString([], {hour: '2-digit', minute: '2-digit'});
    
    document.getElementById('email-view').innerHTML = `
        <div class="view-toolbar"><div class="view-actions">
            <button class="view-btn" onclick="document.getElementById('email-view-panel').classList.remove('open')" id="back-btn" style="display:none;"><i class="fas fa-arrow-left"></i></button>
            <button class="view-btn primary" onclick="replyEmail()"><i class="fas fa-reply"></i> Reply</button>
            <button class="view-btn" onclick="forwardEmail()"><i class="fas fa-share"></i> Forward</button>
            <button class="view-btn" onclick="archiveEmail()"><i class="fas fa-archive"></i></button>
            <button class="view-btn" onclick="deleteEmail()"><i class="fas fa-trash"></i></button>
        </div></div>
        <div class="email-view-content">
            <div class="inbox-ad" onclick="window.open('https://sendbaba.com/security')"><div class="inbox-ad-icon">üîí</div><div class="inbox-ad-content"><div class="inbox-ad-title">Your privacy matters to us</div><div class="inbox-ad-text">Learn about our zero-scanning policy</div></div><span class="inbox-ad-label">Info</span></div>
            <div class="email-card"><div class="email-card-header">
                <h1 class="email-subject-line">${escapeHtml(email.subject || '(no subject)')}<span class="e2e-badge"><i class="fas fa-lock"></i> E2E Encrypted</span></h1>
                <div class="sender-row"><div class="sender-avatar-lg" style="background:${color}">${name[0].toUpperCase()}</div><div class="sender-info"><div class="sender-name">${escapeHtml(name)}</div><div class="sender-email">to ${email.to_email}</div></div><div class="email-datetime"><div>${dateStr}</div><div>${timeStr}</div></div></div>
            </div><div class="email-body">${email.body_html || (email.body_text ? email.body_text.replace(/\n/g, '<br>') : '<em style="color:var(--text-light);">No content</em>')}</div></div>
            <div class="reply-card"><div class="reply-header"><i class="fas fa-reply"></i> Reply<span class="e2e-indicator"><i class="fas fa-lock"></i> E2E Encrypted</span></div><div class="reply-body"><textarea id="reply-text" placeholder="Write your encrypted reply..."></textarea></div><div class="reply-footer"><button class="reply-tool" title="Bold"><i class="fas fa-bold"></i></button><button class="reply-tool" title="Italic"><i class="fas fa-italic"></i></button><button class="reply-tool" title="Link"><i class="fas fa-link"></i></button><button class="reply-tool" title="Attach"><i class="fas fa-paperclip"></i></button><button class="reply-send" onclick="sendReply(${email.id})"><i class="fas fa-lock"></i> Send Encrypted</button></div></div>
        </div>`;
    if (window.innerWidth < 992) document.getElementById('back-btn').style.display = 'flex';
}

async function toggleStar(id) { try { await fetch(`/api/email/${id}/star`, {method: 'POST', credentials: 'same-origin'}); const email = emails.find(e => e.id === id); if (email) email.is_starred = !email.is_starred; renderEmailList(); } catch(e) {} }

async function deleteEmail() { if (!currentEmail) return; try { await fetch(`/api/email/${currentEmail}/move`, { method: 'POST', headers: {'Content-Type': 'application/json'}, credentials: 'same-origin', body: JSON.stringify({folder: 'trash'}) }); showToast('Moved to trash', 'success'); loadFolder(currentFolder); } catch(e) { showToast('Error', 'error'); } }

async function archiveEmail() { showToast('Archived', 'success'); }

let searchTimeout;
function handleSearch(e) { clearTimeout(searchTimeout); const q = e.target.value.trim(); if (e.key === 'Enter') { fetchEmails(currentFolder, q); return; } searchTimeout = setTimeout(() => { if (q.length >= 2 || q.length === 0) { currentPage = 1; fetchEmails(currentFolder, q); } }, 400); }

function refreshEmails() { loadFolder(currentFolder); loadCounts(); showToast('Refreshed', 'success'); }
function toggleSelectAll() { const checked = document.getElementById('select-all').checked; document.querySelectorAll('.email-checkbox').forEach(cb => cb.checked = checked); }
function deleteSelected() { const count = document.querySelectorAll('.email-checkbox:checked').length; if (count > 0) showToast(`${count} emails deleted`, 'success'); }
function archiveSelected() { const count = document.querySelectorAll('.email-checkbox:checked').length; if (count > 0) showToast(`${count} emails archived`, 'success'); }
function prevPage() { if (currentPage > 1) { currentPage--; fetchEmails(currentFolder); } }
function nextPage() { currentPage++; fetchEmails(currentFolder); }

function openCompose(replyTo = null) { if (replyTo) { document.getElementById('compose-to').value = replyTo.from_email || ''; document.getElementById('compose-subject').value = 'Re: ' + (replyTo.subject || ''); } document.getElementById('compose-modal').classList.add('active'); document.getElementById('compose-to').focus(); }
function closeCompose() { document.getElementById('compose-modal').classList.remove('active'); }
function minimizeCompose() {}
function maximizeCompose() {}

async function sendEmail() {
    const to = document.getElementById('compose-to').value;
    const cc = document.getElementById('compose-cc').value;
    const subject = document.getElementById('compose-subject').value;
    const body = document.getElementById('compose-body').value;
    if (!to) { showToast('Please enter a recipient', 'error'); return; }
    try {
        const r = await fetch('/api/send', { method: 'POST', headers: {'Content-Type': 'application/json'}, credentials: 'same-origin', body: JSON.stringify({to, cc, subject, body, encrypted: true}) });
        const data = await r.json();
        if (data.success) { closeCompose(); document.getElementById('compose-to').value = ''; document.getElementById('compose-cc').value = ''; document.getElementById('compose-subject').value = ''; document.getElementById('compose-body').value = ''; showToast('Email sent securely!', 'success'); }
        else { showToast('Error: ' + data.error, 'error'); }
    } catch(e) { showToast('Error sending email', 'error'); }
}

async function sendReply(replyToId) {
    const body = document.getElementById('reply-text').value;
    if (!body.trim()) { showToast('Please write a message', 'error'); return; }
    const email = emails.find(e => e.id === replyToId);
    if (!email) return;
    try {
        const r = await fetch('/api/send', { method: 'POST', headers: {'Content-Type': 'application/json'}, credentials: 'same-origin', body: JSON.stringify({ to: email.from_email, subject: 'Re: ' + (email.subject || ''), body: body, reply_to_id: replyToId, encrypted: true }) });
        const data = await r.json();
        if (data.success) { showToast('Reply sent securely!', 'success'); document.getElementById('reply-text').value = ''; }
        else { showToast('Error: ' + data.error, 'error'); }
    } catch(e) { showToast('Error', 'error'); }
}

function replyEmail() { const email = emails.find(e => e.id === currentEmail); if (email) openCompose(email); }
function forwardEmail() { const email = emails.find(e => e.id === currentEmail); if (email) { document.getElementById('compose-to').value = ''; document.getElementById('compose-subject').value = 'Fwd: ' + (email.subject || ''); document.getElementById('compose-body').value = '\n\n---\nForwarded message'; document.getElementById('compose-modal').classList.add('active'); } }

function saveDraft() { showToast('Draft saved', 'success'); }
function scheduleSend() { showToast('Schedule send coming soon!', 'info'); }

function showPanel(name) { document.getElementById('panel-' + name).classList.add('open'); if (name === 'calendar') renderCalendar(); if (name === 'contacts') loadContacts(); if (name === 'files') loadFiles(); }
function closePanel(name) { document.getElementById('panel-' + name).classList.remove('open'); }
function renderCalendar() { const now = new Date(); const monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December']; document.getElementById('calendar-content').innerHTML = '<div style="text-align:center;margin-bottom:20px;"><h4 style="font-size:16px;font-weight:600;">' + monthNames[now.getMonth()] + ' ' + now.getFullYear() + '</h4></div><p style="color:var(--text-light);text-align:center;">Calendar coming soon!</p>'; }
async function loadContacts() { document.getElementById('contacts-content').innerHTML = '<p style="color:var(--text-light);text-align:center;">Loading contacts...</p>'; }
function loadFiles() { document.getElementById('files-content').innerHTML = '<p style="color:var(--text-light);text-align:center;">No files yet</p>'; }
function showHelp() { showToast('Help center coming soon!', 'info'); }

function showToast(message, type = 'success') { const toast = document.getElementById('toast'); document.getElementById('toast-message').textContent = message; toast.className = 'toast ' + type + ' show'; setTimeout(() => toast.classList.remove('show'), 3000); }

// Discard compose
function discardCompose() {
    document.getElementById('compose-to').value = '';
    document.getElementById('compose-subject').value = '';
    document.getElementById('compose-body').value = '';
    closeCompose();
    showToast('Message discarded', 'info');
}

// Toggle live chat
function toggleLiveChat() {
    const toggle = document.getElementById('chat-toggle');
    const knob = document.getElementById('chat-toggle-knob');
    const isActive = toggle.dataset.active === 'true';
    
    if (isActive) {
        toggle.style.background = 'rgba(255,255,255,0.2)';
        knob.style.left = '2px';
        toggle.dataset.active = 'false';
    } else {
        toggle.style.background = '#10b981';
        knob.style.left = '20px';
        toggle.dataset.active = 'true';
        
        // Open live chat window
        openLiveChatWindow();
    }
}

// Open live chat window
function openLiveChatWindow() {
    const toEmail = document.getElementById('compose-to').value;
    if (!toEmail) {
        showToast('Enter a recipient email first', 'error');
        // Reset toggle
        const toggle = document.getElementById('chat-toggle');
        const knob = document.getElementById('chat-toggle-knob');
        toggle.style.background = 'rgba(255,255,255,0.2)';
        knob.style.left = '2px';
        toggle.dataset.active = 'false';
        return;
    }
    
    // Create or show chat window
    let chatWindow = document.getElementById('live-chat-window');
    let overlay = document.getElementById('live-chat-overlay');
    
    if (!chatWindow) {
        createLiveChatWindow();
        chatWindow = document.getElementById('live-chat-window');
        overlay = document.getElementById('live-chat-overlay');
    }
    
    // Set recipient
    const name = toEmail.split('@')[0].replace(/[._]/g, ' ').replace(/\w/g, l => l.toUpperCase());
    document.getElementById('chat-recipient-name').textContent = name;
    document.getElementById('chat-avatar').textContent = name[0].toUpperCase();
    document.getElementById('chat-avatar').style.background = getColorForEmail(toEmail);
    window.currentChatUser = toEmail;
    
    overlay.classList.add('open');
    chatWindow.classList.add('open');
    document.getElementById('chat-input').focus();
}

// Create live chat window
function createLiveChatWindow() {
    // Overlay
    const overlay = document.createElement('div');
    overlay.id = 'live-chat-overlay';
    overlay.className = 'chat-overlay';
    overlay.onclick = function(e) { if (e.target === overlay) closeLiveChatWindow(); };
    
    // Chat window
    const chatWindow = document.createElement('div');
    chatWindow.id = 'live-chat-window';
    chatWindow.className = 'live-chat-window';
    chatWindow.innerHTML = `
        <div class="chat-header" style="background:linear-gradient(135deg,#f86d31,#e55a1f);padding:12px 16px;display:flex;align-items:center;gap:12px;color:white;">
            <div id="chat-avatar" style="width:40px;height:40px;border-radius:50%;background:rgba(255,255,255,0.2);display:flex;align-items:center;justify-content:center;font-weight:600;">?</div>
            <div style="flex:1;">
                <div id="chat-recipient-name" style="font-weight:600;font-size:15px;">Select Contact</div>
                <div style="font-size:12px;opacity:0.9;display:flex;align-items:center;gap:4px;"><span style="width:8px;height:8px;background:#4ade80;border-radius:50%;"></span> Online</div>
            </div>
            <button onclick="closeLiveChatWindow()" style="width:36px;height:36px;border:none;background:rgba(255,255,255,0.15);color:white;border-radius:50%;cursor:pointer;"><i class="fas fa-times"></i></button>
        </div>
        <div id="chat-messages" style="flex:1;padding:16px;overflow-y:auto;background:#e5ddd5;display:flex;flex-direction:column;gap:4px;">
            <div style="text-align:center;margin:16px 0;"><span style="background:#e1e7eb;color:#54656f;padding:6px 14px;border-radius:8px;font-size:12px;">Today</span></div>
        </div>
        <div style="background:#f0f2f5;padding:10px 12px;display:flex;align-items:center;gap:8px;">
            <button onclick="chatAddEmoji()" style="width:40px;height:40px;border:none;background:transparent;color:#54656f;border-radius:50%;cursor:pointer;font-size:18px;"><i class="fas fa-smile"></i></button>
            <div style="flex:1;background:white;border-radius:24px;display:flex;align-items:center;padding:0 12px;">
                <input type="text" id="chat-input" placeholder="Type a message" style="flex:1;border:none;padding:10px 0;font-size:14px;outline:none;background:transparent;" onkeypress="if(event.key==='Enter')sendChatMsg()">
            </div>
            <button onclick="sendChatMsg()" style="width:44px;height:44px;border:none;background:linear-gradient(135deg,#f86d31,#e55a1f);color:white;border-radius:50%;cursor:pointer;font-size:18px;box-shadow:0 4px 12px rgba(248,109,49,0.35);"><i class="fas fa-paper-plane"></i></button>
        </div>
    `;
    
    document.body.appendChild(overlay);
    document.body.appendChild(chatWindow);
}

// Close live chat
function closeLiveChatWindow() {
    document.getElementById('live-chat-overlay')?.classList.remove('open');
    document.getElementById('live-chat-window')?.classList.remove('open');
    // Reset toggle
    const toggle = document.getElementById('chat-toggle');
    const knob = document.getElementById('chat-toggle-knob');
    if (toggle && knob) {
        toggle.style.background = 'rgba(255,255,255,0.2)';
        knob.style.left = '2px';
        toggle.dataset.active = 'false';
    }
}

// Send chat message
async function sendChatMsg() {
    const input = document.getElementById('chat-input');
    const content = input.value.trim();
    if (!content || !window.currentChatUser) return;
    
    input.value = '';
    
    // Add to UI
    addChatBubble(content, true);
    
    // Send to server
    try {
        await fetch('/api/chat/send', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            credentials: 'same-origin',
            body: JSON.stringify({ to: window.currentChatUser, content: content })
        });
    } catch(e) {}
}

// Add chat bubble
function addChatBubble(content, isSent) {
    const container = document.getElementById('chat-messages');
    const bubble = document.createElement('div');
    bubble.style.cssText = `max-width:80%;padding:8px 12px;border-radius:8px;font-size:14px;line-height:1.4;align-self:${isSent ? 'flex-end' : 'flex-start'};background:${isSent ? '#dcf8c6' : 'white'};`;
    
    const time = new Date().toLocaleTimeString([], {hour:'2-digit',minute:'2-digit'});
    bubble.innerHTML = `${escapeHtml(content)}<div style="font-size:10px;color:#667781;margin-top:4px;text-align:right;">${time} ${isSent ? '<i class="fas fa-check-double" style="color:#53bdeb;"></i>' : ''}</div>`;
    
    container.appendChild(bubble);
    container.scrollTop = container.scrollHeight;
}

// Chat emoji
function chatAddEmoji() {
    const emojis = ['üòÄ','üòä','üëç','‚ù§Ô∏è','üéâ','‚ú®','üî•','üíØ','üëè','üôè'];
    const input = document.getElementById('chat-input');
    input.value += emojis[Math.floor(Math.random() * emojis.length)];
    input.focus();
}

// Helper for colors
function getColorForEmail(email) {
    const colors = ['#f86d31','#3b82f6','#10b981','#8b5cf6','#ec4899','#f59e0b'];
    let hash = 0;
    for (let i = 0; i < email.length; i++) hash += email.charCodeAt(i);
    return colors[hash % colors.length];
}

// Helper for escaping
function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}

// Hide send menu when clicking outside
document.addEventListener('click', function(e) {
    const menu = document.getElementById('compose-send-menu');
    if (menu && !e.target.closest('.compose-send-wrapper')) {
        menu.style.display = 'none';
    }
});


// Open Live Chat in popup window
function openLiveChatPopup() {
    const toEmail = document.getElementById('compose-to').value.trim();
    if (!toEmail) {
        showToast('Enter a recipient email first', 'error');
        document.getElementById('compose-to').focus();
        return;
    }
    
    // Open chat in new popup window
    const width = 420;
    const height = 600;
    const left = (screen.width - width) / 2;
    const top = (screen.height - height) / 2;
    
    const chatUrl = '/chat?with=' + encodeURIComponent(toEmail);
    window.open(chatUrl, 'SendBabaChat', `width=${width},height=${height},left=${left},top=${top},resizable=yes,scrollbars=no`);
}


// ========== CHAT HISTORY FUNCTIONS ==========

// Open chat history panel
function openChatHistory() {
    document.getElementById('chat-history-overlay').style.display = 'flex';
    loadChatHistory();
}

// Close chat history
function closeChatHistory() {
    document.getElementById('chat-history-overlay').style.display = 'none';
}

// Load chat conversations
async function loadChatHistory() {
    const container = document.getElementById('chat-history-list');
    
    try {
        const r = await fetch('/api/chat/conversations', { credentials: 'same-origin' });
        const data = await r.json();
        
        if (data.success && data.conversations && data.conversations.length > 0) {
            container.innerHTML = data.conversations.map(conv => {
                const initial = conv.with_email[0].toUpperCase();
                const name = conv.with_name || conv.with_email.split('@')[0].replace(/[._]/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
                const unread = conv.unread_count > 0 ? `<span style="background:#ef4444;color:white;font-size:11px;padding:2px 8px;border-radius:10px;font-weight:600;">${conv.unread_count}</span>` : '';
                const time = formatChatTime(conv.last_message_at);
                const preview = conv.last_message ? (conv.last_message.length > 35 ? conv.last_message.substring(0,35) + '...' : conv.last_message) : 'No messages yet';
                
                return `
                    <div onclick="openChat('${conv.with_email}')" style="display:flex;align-items:center;gap:12px;padding:12px;cursor:pointer;border-radius:12px;transition:background 0.15s;margin-bottom:4px;" onmouseover="this.style.background='#f3f4f6'" onmouseout="this.style.background='transparent'">
                        <div style="width:48px;height:48px;border-radius:50%;background:${getAvatarColor(conv.with_email)};display:flex;align-items:center;justify-content:center;color:white;font-weight:600;font-size:18px;flex-shrink:0;">${initial}</div>
                        <div style="flex:1;min-width:0;">
                            <div style="display:flex;align-items:center;justify-content:space-between;margin-bottom:2px;">
                                <span style="font-weight:600;font-size:14px;color:#1f2937;">${escapeHtml(name)}</span>
                                <span style="font-size:11px;color:#9ca3af;">${time}</span>
                            </div>
                            <div style="display:flex;align-items:center;justify-content:space-between;">
                                <span style="font-size:13px;color:#6b7280;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;">${escapeHtml(preview)}</span>
                                ${unread}
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        } else {
            container.innerHTML = `
                <div style="text-align:center;padding:60px 20px;color:#6b7280;">
                    <i class="fas fa-comments" style="font-size:48px;margin-bottom:16px;opacity:0.3;display:block;"></i>
                    <div style="font-size:16px;font-weight:600;margin-bottom:4px;">No chats yet</div>
                    <div style="font-size:13px;">Start a conversation from compose</div>
                </div>
            `;
        }
    } catch(e) {
        container.innerHTML = '<div style="text-align:center;padding:40px;color:#ef4444;">Failed to load chats</div>';
    }
}

// Open chat window
function openChat(email) {
    closeChatHistory();
    const width = 420;
    const height = 600;
    const left = (screen.width - width) / 2;
    const top = (screen.height - height) / 2;
    window.open('/chat?with=' + encodeURIComponent(email), 'SendBabaChat_' + email.replace(/[^a-z0-9]/gi, ''), `width=${width},height=${height},left=${left},top=${top},resizable=yes`);
}

// Start new chat
function startNewChat() {
    closeChatHistory();
    const email = prompt('Enter email address to chat with:');
    if (email && email.includes('@')) {
        openChat(email);
    } else if (email) {
        showToast('Please enter a valid email', 'error');
    }
}

// Format chat time
function formatChatTime(dateStr) {
    if (!dateStr) return '';
    const date = new Date(dateStr);
    const now = new Date();
    const diff = now - date;
    
    if (diff < 60000) return 'Now';
    if (diff < 3600000) return Math.floor(diff/60000) + 'm';
    if (diff < 86400000) return Math.floor(diff/3600000) + 'h';
    if (diff < 604800000) return Math.floor(diff/86400000) + 'd';
    return date.toLocaleDateString();
}

// Get avatar color
function getAvatarColor(email) {
    const colors = ['#f86d31','#3b82f6','#10b981','#8b5cf6','#ec4899','#f59e0b','#06b6d4','#84cc16'];
    let hash = 0;
    for (let i = 0; i < email.length; i++) hash += email.charCodeAt(i);
    return colors[hash % colors.length];
}

// Check for unread chats periodically
async function checkUnreadChats() {
    try {
        const r = await fetch('/api/chat/unread-count', { credentials: 'same-origin' });
        const data = await r.json();
        const dot = document.getElementById('chat-dot');
        if (dot) {
            dot.style.display = data.count > 0 ? 'block' : 'none';
        }
    } catch(e) {}
}

// Check unread chats every 30 seconds
setInterval(checkUnreadChats, 30000);
checkUnreadChats();

</script>
<script src="/static/js/realtime.js">
// Discard compose
function discardCompose() {
    document.getElementById('compose-to').value = '';
    document.getElementById('compose-subject').value = '';
    document.getElementById('compose-body').value = '';
    closeCompose();
    showToast('Message discarded', 'info');
}

// Toggle live chat
function toggleLiveChat() {
    const toggle = document.getElementById('chat-toggle');
    const knob = document.getElementById('chat-toggle-knob');
    const isActive = toggle.dataset.active === 'true';
    
    if (isActive) {
        toggle.style.background = 'rgba(255,255,255,0.2)';
        knob.style.left = '2px';
        toggle.dataset.active = 'false';
    } else {
        toggle.style.background = '#10b981';
        knob.style.left = '20px';
        toggle.dataset.active = 'true';
        
        // Open live chat window
        openLiveChatWindow();
    }
}

// Open live chat window
function openLiveChatWindow() {
    const toEmail = document.getElementById('compose-to').value;
    if (!toEmail) {
        showToast('Enter a recipient email first', 'error');
        // Reset toggle
        const toggle = document.getElementById('chat-toggle');
        const knob = document.getElementById('chat-toggle-knob');
        toggle.style.background = 'rgba(255,255,255,0.2)';
        knob.style.left = '2px';
        toggle.dataset.active = 'false';
        return;
    }
    
    // Create or show chat window
    let chatWindow = document.getElementById('live-chat-window');
    let overlay = document.getElementById('live-chat-overlay');
    
    if (!chatWindow) {
        createLiveChatWindow();
        chatWindow = document.getElementById('live-chat-window');
        overlay = document.getElementById('live-chat-overlay');
    }
    
    // Set recipient
    const name = toEmail.split('@')[0].replace(/[._]/g, ' ').replace(/\w/g, l => l.toUpperCase());
    document.getElementById('chat-recipient-name').textContent = name;
    document.getElementById('chat-avatar').textContent = name[0].toUpperCase();
    document.getElementById('chat-avatar').style.background = getColorForEmail(toEmail);
    window.currentChatUser = toEmail;
    
    overlay.classList.add('open');
    chatWindow.classList.add('open');
    document.getElementById('chat-input').focus();
}

// Create live chat window
function createLiveChatWindow() {
    // Overlay
    const overlay = document.createElement('div');
    overlay.id = 'live-chat-overlay';
    overlay.className = 'chat-overlay';
    overlay.onclick = function(e) { if (e.target === overlay) closeLiveChatWindow(); };
    
    // Chat window
    const chatWindow = document.createElement('div');
    chatWindow.id = 'live-chat-window';
    chatWindow.className = 'live-chat-window';
    chatWindow.innerHTML = `
        <div class="chat-header" style="background:linear-gradient(135deg,#f86d31,#e55a1f);padding:12px 16px;display:flex;align-items:center;gap:12px;color:white;">
            <div id="chat-avatar" style="width:40px;height:40px;border-radius:50%;background:rgba(255,255,255,0.2);display:flex;align-items:center;justify-content:center;font-weight:600;">?</div>
            <div style="flex:1;">
                <div id="chat-recipient-name" style="font-weight:600;font-size:15px;">Select Contact</div>
                <div style="font-size:12px;opacity:0.9;display:flex;align-items:center;gap:4px;"><span style="width:8px;height:8px;background:#4ade80;border-radius:50%;"></span> Online</div>
            </div>
            <button onclick="closeLiveChatWindow()" style="width:36px;height:36px;border:none;background:rgba(255,255,255,0.15);color:white;border-radius:50%;cursor:pointer;"><i class="fas fa-times"></i></button>
        </div>
        <div id="chat-messages" style="flex:1;padding:16px;overflow-y:auto;background:#e5ddd5;display:flex;flex-direction:column;gap:4px;">
            <div style="text-align:center;margin:16px 0;"><span style="background:#e1e7eb;color:#54656f;padding:6px 14px;border-radius:8px;font-size:12px;">Today</span></div>
        </div>
        <div style="background:#f0f2f5;padding:10px 12px;display:flex;align-items:center;gap:8px;">
            <button onclick="chatAddEmoji()" style="width:40px;height:40px;border:none;background:transparent;color:#54656f;border-radius:50%;cursor:pointer;font-size:18px;"><i class="fas fa-smile"></i></button>
            <div style="flex:1;background:white;border-radius:24px;display:flex;align-items:center;padding:0 12px;">
                <input type="text" id="chat-input" placeholder="Type a message" style="flex:1;border:none;padding:10px 0;font-size:14px;outline:none;background:transparent;" onkeypress="if(event.key==='Enter')sendChatMsg()">
            </div>
            <button onclick="sendChatMsg()" style="width:44px;height:44px;border:none;background:linear-gradient(135deg,#f86d31,#e55a1f);color:white;border-radius:50%;cursor:pointer;font-size:18px;box-shadow:0 4px 12px rgba(248,109,49,0.35);"><i class="fas fa-paper-plane"></i></button>
        </div>
    `;
    
    document.body.appendChild(overlay);
    document.body.appendChild(chatWindow);
}

// Close live chat
function closeLiveChatWindow() {
    document.getElementById('live-chat-overlay')?.classList.remove('open');
    document.getElementById('live-chat-window')?.classList.remove('open');
    // Reset toggle
    const toggle = document.getElementById('chat-toggle');
    const knob = document.getElementById('chat-toggle-knob');
    if (toggle && knob) {
        toggle.style.background = 'rgba(255,255,255,0.2)';
        knob.style.left = '2px';
        toggle.dataset.active = 'false';
    }
}

// Send chat message
async function sendChatMsg() {
    const input = document.getElementById('chat-input');
    const content = input.value.trim();
    if (!content || !window.currentChatUser) return;
    
    input.value = '';
    
    // Add to UI
    addChatBubble(content, true);
    
    // Send to server
    try {
        await fetch('/api/chat/send', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            credentials: 'same-origin',
            body: JSON.stringify({ to: window.currentChatUser, content: content })
        });
    } catch(e) {}
}

// Add chat bubble
function addChatBubble(content, isSent) {
    const container = document.getElementById('chat-messages');
    const bubble = document.createElement('div');
    bubble.style.cssText = `max-width:80%;padding:8px 12px;border-radius:8px;font-size:14px;line-height:1.4;align-self:${isSent ? 'flex-end' : 'flex-start'};background:${isSent ? '#dcf8c6' : 'white'};`;
    
    const time = new Date().toLocaleTimeString([], {hour:'2-digit',minute:'2-digit'});
    bubble.innerHTML = `${escapeHtml(content)}<div style="font-size:10px;color:#667781;margin-top:4px;text-align:right;">${time} ${isSent ? '<i class="fas fa-check-double" style="color:#53bdeb;"></i>' : ''}</div>`;
    
    container.appendChild(bubble);
    container.scrollTop = container.scrollHeight;
}

// Chat emoji
function chatAddEmoji() {
    const emojis = ['üòÄ','üòä','üëç','‚ù§Ô∏è','üéâ','‚ú®','üî•','üíØ','üëè','üôè'];
    const input = document.getElementById('chat-input');
    input.value += emojis[Math.floor(Math.random() * emojis.length)];
    input.focus();
}

// Helper for colors
function getColorForEmail(email) {
    const colors = ['#f86d31','#3b82f6','#10b981','#8b5cf6','#ec4899','#f59e0b'];
    let hash = 0;
    for (let i = 0; i < email.length; i++) hash += email.charCodeAt(i);
    return colors[hash % colors.length];
}

// Helper for escaping
function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}

// Hide send menu when clicking outside
document.addEventListener('click', function(e) {
    const menu = document.getElementById('compose-send-menu');
    if (menu && !e.target.closest('.compose-send-wrapper')) {
        menu.style.display = 'none';
    }
});


// Open Live Chat in popup window
function openLiveChatPopup() {
    const toEmail = document.getElementById('compose-to').value.trim();
    if (!toEmail) {
        showToast('Enter a recipient email first', 'error');
        document.getElementById('compose-to').focus();
        return;
    }
    
    // Open chat in new popup window
    const width = 420;
    const height = 600;
    const left = (screen.width - width) / 2;
    const top = (screen.height - height) / 2;
    
    const chatUrl = '/chat?with=' + encodeURIComponent(toEmail);
    window.open(chatUrl, 'SendBabaChat', `width=${width},height=${height},left=${left},top=${top},resizable=yes,scrollbars=no`);
}


// ========== CHAT HISTORY FUNCTIONS ==========

// Open chat history panel
function openChatHistory() {
    document.getElementById('chat-history-overlay').style.display = 'flex';
    loadChatHistory();
}

// Close chat history
function closeChatHistory() {
    document.getElementById('chat-history-overlay').style.display = 'none';
}

// Load chat conversations
async function loadChatHistory() {
    const container = document.getElementById('chat-history-list');
    
    try {
        const r = await fetch('/api/chat/conversations', { credentials: 'same-origin' });
        const data = await r.json();
        
        if (data.success && data.conversations && data.conversations.length > 0) {
            container.innerHTML = data.conversations.map(conv => {
                const initial = conv.with_email[0].toUpperCase();
                const name = conv.with_name || conv.with_email.split('@')[0].replace(/[._]/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
                const unread = conv.unread_count > 0 ? `<span style="background:#ef4444;color:white;font-size:11px;padding:2px 8px;border-radius:10px;font-weight:600;">${conv.unread_count}</span>` : '';
                const time = formatChatTime(conv.last_message_at);
                const preview = conv.last_message ? (conv.last_message.length > 35 ? conv.last_message.substring(0,35) + '...' : conv.last_message) : 'No messages yet';
                
                return `
                    <div onclick="openChat('${conv.with_email}')" style="display:flex;align-items:center;gap:12px;padding:12px;cursor:pointer;border-radius:12px;transition:background 0.15s;margin-bottom:4px;" onmouseover="this.style.background='#f3f4f6'" onmouseout="this.style.background='transparent'">
                        <div style="width:48px;height:48px;border-radius:50%;background:${getAvatarColor(conv.with_email)};display:flex;align-items:center;justify-content:center;color:white;font-weight:600;font-size:18px;flex-shrink:0;">${initial}</div>
                        <div style="flex:1;min-width:0;">
                            <div style="display:flex;align-items:center;justify-content:space-between;margin-bottom:2px;">
                                <span style="font-weight:600;font-size:14px;color:#1f2937;">${escapeHtml(name)}</span>
                                <span style="font-size:11px;color:#9ca3af;">${time}</span>
                            </div>
                            <div style="display:flex;align-items:center;justify-content:space-between;">
                                <span style="font-size:13px;color:#6b7280;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;">${escapeHtml(preview)}</span>
                                ${unread}
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        } else {
            container.innerHTML = `
                <div style="text-align:center;padding:60px 20px;color:#6b7280;">
                    <i class="fas fa-comments" style="font-size:48px;margin-bottom:16px;opacity:0.3;display:block;"></i>
                    <div style="font-size:16px;font-weight:600;margin-bottom:4px;">No chats yet</div>
                    <div style="font-size:13px;">Start a conversation from compose</div>
                </div>
            `;
        }
    } catch(e) {
        container.innerHTML = '<div style="text-align:center;padding:40px;color:#ef4444;">Failed to load chats</div>';
    }
}

// Open chat window
function openChat(email) {
    closeChatHistory();
    const width = 420;
    const height = 600;
    const left = (screen.width - width) / 2;
    const top = (screen.height - height) / 2;
    window.open('/chat?with=' + encodeURIComponent(email), 'SendBabaChat_' + email.replace(/[^a-z0-9]/gi, ''), `width=${width},height=${height},left=${left},top=${top},resizable=yes`);
}

// Start new chat
function startNewChat() {
    closeChatHistory();
    const email = prompt('Enter email address to chat with:');
    if (email && email.includes('@')) {
        openChat(email);
    } else if (email) {
        showToast('Please enter a valid email', 'error');
    }
}

// Format chat time
function formatChatTime(dateStr) {
    if (!dateStr) return '';
    const date = new Date(dateStr);
    const now = new Date();
    const diff = now - date;
    
    if (diff < 60000) return 'Now';
    if (diff < 3600000) return Math.floor(diff/60000) + 'm';
    if (diff < 86400000) return Math.floor(diff/3600000) + 'h';
    if (diff < 604800000) return Math.floor(diff/86400000) + 'd';
    return date.toLocaleDateString();
}

// Get avatar color
function getAvatarColor(email) {
    const colors = ['#f86d31','#3b82f6','#10b981','#8b5cf6','#ec4899','#f59e0b','#06b6d4','#84cc16'];
    let hash = 0;
    for (let i = 0; i < email.length; i++) hash += email.charCodeAt(i);
    return colors[hash % colors.length];
}

// Check for unread chats periodically
async function checkUnreadChats() {
    try {
        const r = await fetch('/api/chat/unread-count', { credentials: 'same-origin' });
        const data = await r.json();
        const dot = document.getElementById('chat-dot');
        if (dot) {
            dot.style.display = data.count > 0 ? 'block' : 'none';
        }
    } catch(e) {}
}

// Check unread chats every 30 seconds
setInterval(checkUnreadChats, 30000);
checkUnreadChats();

</script>

