// Discard compose
function discardCompose() {
    document.getElementById('compose-to').value = '';
    document.getElementById('compose-subject').value = '';
    document.getElementById('compose-body').value = '';
    closeCompose();
    showToast('Message discarded', 'info');
}

// Toggle live chat
function toggleLiveChat() {
    const toggle = document.getElementById('chat-toggle');
    const knob = document.getElementById('chat-toggle-knob');
    const isActive = toggle.dataset.active === 'true';
    
    if (isActive) {
        toggle.style.background = 'rgba(255,255,255,0.2)';
        knob.style.left = '2px';
        toggle.dataset.active = 'false';
    } else {
        toggle.style.background = '#10b981';
        knob.style.left = '20px';
        toggle.dataset.active = 'true';
        
        // Open live chat window
        openLiveChatWindow();
    }
}

// Open live chat window
function openLiveChatWindow() {
    const toEmail = document.getElementById('compose-to').value;
    if (!toEmail) {
        showToast('Enter a recipient email first', 'error');
        // Reset toggle
        const toggle = document.getElementById('chat-toggle');
        const knob = document.getElementById('chat-toggle-knob');
        toggle.style.background = 'rgba(255,255,255,0.2)';
        knob.style.left = '2px';
        toggle.dataset.active = 'false';
        return;
    }
    
    // Create or show chat window
    let chatWindow = document.getElementById('live-chat-window');
    let overlay = document.getElementById('live-chat-overlay');
    
    if (!chatWindow) {
        createLiveChatWindow();
        chatWindow = document.getElementById('live-chat-window');
        overlay = document.getElementById('live-chat-overlay');
    }
    
    // Set recipient
    const name = toEmail.split('@')[0].replace(/[._]/g, ' ').replace(/\w/g, l => l.toUpperCase());
    document.getElementById('chat-recipient-name').textContent = name;
    document.getElementById('chat-avatar').textContent = name[0].toUpperCase();
    document.getElementById('chat-avatar').style.background = getColorForEmail(toEmail);
    window.currentChatUser = toEmail;
    
    overlay.classList.add('open');
    chatWindow.classList.add('open');
    document.getElementById('chat-input').focus();
}

// Create live chat window
function createLiveChatWindow() {
    // Overlay
    const overlay = document.createElement('div');
    overlay.id = 'live-chat-overlay';
    overlay.className = 'chat-overlay';
    overlay.onclick = function(e) { if (e.target === overlay) closeLiveChatWindow(); };
    
    // Chat window
    const chatWindow = document.createElement('div');
    chatWindow.id = 'live-chat-window';
    chatWindow.className = 'live-chat-window';
    chatWindow.innerHTML = `
        <div class="chat-header" style="background:linear-gradient(135deg,#f86d31,#e55a1f);padding:12px 16px;display:flex;align-items:center;gap:12px;color:white;">
            <div id="chat-avatar" style="width:40px;height:40px;border-radius:50%;background:rgba(255,255,255,0.2);display:flex;align-items:center;justify-content:center;font-weight:600;">?</div>
            <div style="flex:1;">
                <div id="chat-recipient-name" style="font-weight:600;font-size:15px;">Select Contact</div>
                <div style="font-size:12px;opacity:0.9;display:flex;align-items:center;gap:4px;"><span style="width:8px;height:8px;background:#4ade80;border-radius:50%;"></span> Online</div>
            </div>
            <button onclick="closeLiveChatWindow()" style="width:36px;height:36px;border:none;background:rgba(255,255,255,0.15);color:white;border-radius:50%;cursor:pointer;"><i class="fas fa-times"></i></button>
        </div>
        <div id="chat-messages" style="flex:1;padding:16px;overflow-y:auto;background:#e5ddd5;display:flex;flex-direction:column;gap:4px;">
            <div style="text-align:center;margin:16px 0;"><span style="background:#e1e7eb;color:#54656f;padding:6px 14px;border-radius:8px;font-size:12px;">Today</span></div>
        </div>
        <div style="background:#f0f2f5;padding:10px 12px;display:flex;align-items:center;gap:8px;">
            <button onclick="chatAddEmoji()" style="width:40px;height:40px;border:none;background:transparent;color:#54656f;border-radius:50%;cursor:pointer;font-size:18px;"><i class="fas fa-smile"></i></button>
            <div style="flex:1;background:white;border-radius:24px;display:flex;align-items:center;padding:0 12px;">
                <input type="text" id="chat-input" placeholder="Type a message" style="flex:1;border:none;padding:10px 0;font-size:14px;outline:none;background:transparent;" onkeypress="if(event.key==='Enter')sendChatMsg()">
            </div>
            <button onclick="sendChatMsg()" style="width:44px;height:44px;border:none;background:linear-gradient(135deg,#f86d31,#e55a1f);color:white;border-radius:50%;cursor:pointer;font-size:18px;box-shadow:0 4px 12px rgba(248,109,49,0.35);"><i class="fas fa-paper-plane"></i></button>
        </div>
    `;
    
    document.body.appendChild(overlay);
    document.body.appendChild(chatWindow);
}

// Close live chat
function closeLiveChatWindow() {
    document.getElementById('live-chat-overlay')?.classList.remove('open');
    document.getElementById('live-chat-window')?.classList.remove('open');
    // Reset toggle
    const toggle = document.getElementById('chat-toggle');
    const knob = document.getElementById('chat-toggle-knob');
    if (toggle && knob) {
        toggle.style.background = 'rgba(255,255,255,0.2)';
        knob.style.left = '2px';
        toggle.dataset.active = 'false';
    }
}

// Send chat message
async function sendChatMsg() {
    const input = document.getElementById('chat-input');
    const content = input.value.trim();
    if (!content || !window.currentChatUser) return;
    
    input.value = '';
    
    // Add to UI
    addChatBubble(content, true);
    
    // Send to server
    try {
        await fetch('/api/chat/send', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            credentials: 'same-origin',
            body: JSON.stringify({ to: window.currentChatUser, content: content })
        });
    } catch(e) {}
}

// Add chat bubble
function addChatBubble(content, isSent) {
    const container = document.getElementById('chat-messages');
    const bubble = document.createElement('div');
    bubble.style.cssText = `max-width:80%;padding:8px 12px;border-radius:8px;font-size:14px;line-height:1.4;align-self:${isSent ? 'flex-end' : 'flex-start'};background:${isSent ? '#dcf8c6' : 'white'};`;
    
    const time = new Date().toLocaleTimeString([], {hour:'2-digit',minute:'2-digit'});
    bubble.innerHTML = `${escapeHtml(content)}<div style="font-size:10px;color:#667781;margin-top:4px;text-align:right;">${time} ${isSent ? '<i class="fas fa-check-double" style="color:#53bdeb;"></i>' : ''}</div>`;
    
    container.appendChild(bubble);
    container.scrollTop = container.scrollHeight;
}

// Chat emoji
function chatAddEmoji() {
    const emojis = ['üòÄ','üòä','üëç','‚ù§Ô∏è','üéâ','‚ú®','üî•','üíØ','üëè','üôè'];
    const input = document.getElementById('chat-input');
    input.value += emojis[Math.floor(Math.random() * emojis.length)];
    input.focus();
}

// Helper for colors
function getColorForEmail(email) {
    const colors = ['#f86d31','#3b82f6','#10b981','#8b5cf6','#ec4899','#f59e0b'];
    let hash = 0;
    for (let i = 0; i < email.length; i++) hash += email.charCodeAt(i);
    return colors[hash % colors.length];
}

// Helper for escaping
function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
}

// Hide send menu when clicking outside
document.addEventListener('click', function(e) {
    const menu = document.getElementById('compose-send-menu');
    if (menu && !e.target.closest('.compose-send-wrapper')) {
        menu.style.display = 'none';
    }
});


// Open Live Chat in popup window
function openLiveChatPopup() {
    const toEmail = document.getElementById('compose-to').value.trim();
    if (!toEmail) {
        showToast('Enter a recipient email first', 'error');
        document.getElementById('compose-to').focus();
        return;
    }
    
    // Open chat in new popup window
    const width = 420;
    const height = 600;
    const left = (screen.width - width) / 2;
    const top = (screen.height - height) / 2;
    
    const chatUrl = '/chat?with=' + encodeURIComponent(toEmail);
    window.open(chatUrl, 'SendBabaChat', `width=${width},height=${height},left=${left},top=${top},resizable=yes,scrollbars=no`);
}


// ========== CHAT HISTORY FUNCTIONS ==========

// Open chat history panel
function openChatHistory() {
    document.getElementById('chat-history-overlay').style.display = 'flex';
    loadChatHistory();
}

// Close chat history
function closeChatHistory() {
    document.getElementById('chat-history-overlay').style.display = 'none';
}

// Load chat conversations
async function loadChatHistory() {
    const container = document.getElementById('chat-history-list');
    
    try {
        const r = await fetch('/api/chat/conversations', { credentials: 'same-origin' });
        const data = await r.json();
        
        if (data.success && data.conversations && data.conversations.length > 0) {
            container.innerHTML = data.conversations.map(conv => {
                const initial = conv.with_email[0].toUpperCase();
                const name = conv.with_name || conv.with_email.split('@')[0].replace(/[._]/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
                const unread = conv.unread_count > 0 ? `<span style="background:#ef4444;color:white;font-size:11px;padding:2px 8px;border-radius:10px;font-weight:600;">${conv.unread_count}</span>` : '';
                const time = formatChatTime(conv.last_message_at);
                const preview = conv.last_message ? (conv.last_message.length > 35 ? conv.last_message.substring(0,35) + '...' : conv.last_message) : 'No messages yet';
                
                return `
                    <div onclick="openChat('${conv.with_email}')" style="display:flex;align-items:center;gap:12px;padding:12px;cursor:pointer;border-radius:12px;transition:background 0.15s;margin-bottom:4px;" onmouseover="this.style.background='#f3f4f6'" onmouseout="this.style.background='transparent'">
                        <div style="width:48px;height:48px;border-radius:50%;background:${getAvatarColor(conv.with_email)};display:flex;align-items:center;justify-content:center;color:white;font-weight:600;font-size:18px;flex-shrink:0;">${initial}</div>
                        <div style="flex:1;min-width:0;">
                            <div style="display:flex;align-items:center;justify-content:space-between;margin-bottom:2px;">
                                <span style="font-weight:600;font-size:14px;color:#1f2937;">${escapeHtml(name)}</span>
                                <span style="font-size:11px;color:#9ca3af;">${time}</span>
                            </div>
                            <div style="display:flex;align-items:center;justify-content:space-between;">
                                <span style="font-size:13px;color:#6b7280;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;">${escapeHtml(preview)}</span>
                                ${unread}
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        } else {
            container.innerHTML = `
                <div style="text-align:center;padding:60px 20px;color:#6b7280;">
                    <i class="fas fa-comments" style="font-size:48px;margin-bottom:16px;opacity:0.3;display:block;"></i>
                    <div style="font-size:16px;font-weight:600;margin-bottom:4px;">No chats yet</div>
                    <div style="font-size:13px;">Start a conversation from compose</div>
                </div>
            `;
        }
    } catch(e) {
        container.innerHTML = '<div style="text-align:center;padding:40px;color:#ef4444;">Failed to load chats</div>';
    }
}

// Open chat window
function openChat(email) {
    closeChatHistory();
    const width = 420;
    const height = 600;
    const left = (screen.width - width) / 2;
    const top = (screen.height - height) / 2;
    window.open('/chat?with=' + encodeURIComponent(email), 'SendBabaChat_' + email.replace(/[^a-z0-9]/gi, ''), `width=${width},height=${height},left=${left},top=${top},resizable=yes`);
}

// Start new chat
function startNewChat() {
    closeChatHistory();
    const email = prompt('Enter email address to chat with:');
    if (email && email.includes('@')) {
        openChat(email);
    } else if (email) {
        showToast('Please enter a valid email', 'error');
    }
}

// Format chat time
function formatChatTime(dateStr) {
    if (!dateStr) return '';
    const date = new Date(dateStr);
    const now = new Date();
    const diff = now - date;
    
    if (diff < 60000) return 'Now';
    if (diff < 3600000) return Math.floor(diff/60000) + 'm';
    if (diff < 86400000) return Math.floor(diff/3600000) + 'h';
    if (diff < 604800000) return Math.floor(diff/86400000) + 'd';
    return date.toLocaleDateString();
}

// Get avatar color
function getAvatarColor(email) {
    const colors = ['#f86d31','#3b82f6','#10b981','#8b5cf6','#ec4899','#f59e0b','#06b6d4','#84cc16'];
    let hash = 0;
    for (let i = 0; i < email.length; i++) hash += email.charCodeAt(i);
    return colors[hash % colors.length];
}

// Check for unread chats periodically
async function checkUnreadChats() {
    try {
        const r = await fetch('/api/chat/unread-count', { credentials: 'same-origin' });
        const data = await r.json();
        const dot = document.getElementById('chat-dot');
        if (dot) {
            dot.style.display = data.count > 0 ? 'block' : 'none';
        }
    } catch(e) {}
}

// Check unread chats every 30 seconds
setInterval(checkUnreadChats, 30000);
checkUnreadChats();

