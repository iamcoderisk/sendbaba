{% extends "base.html" %}
{% block title %}Campaigns - SendBaba{% endblock %}
{% block content %}
<div class="p-6">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Campaigns</h1>
            <p class="text-gray-600">Create and manage your email campaigns</p>
        </div>
        <a href="/dashboard/campaigns/create" class="bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-xl font-bold transition flex items-center gap-2">
            <i class="fas fa-plus"></i> Create campaign
        </a>
    </div>

    <!-- Tabs -->
    <div class="border-b border-gray-200 mb-6">
        <nav class="flex gap-8">
            <button onclick="showTab('sent')" class="tab-btn active pb-4 border-b-2 border-green-500 text-green-600 font-semibold" data-tab="sent">
                Sent <span class="ml-2 bg-gray-100 text-gray-700 px-2 py-0.5 rounded-full text-sm">{{ campaigns.sent|length }}</span>
            </button>
            <button onclick="showTab('drafts')" class="tab-btn pb-4 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-semibold" data-tab="drafts">
                Drafts <span class="ml-2 bg-gray-100 text-gray-700 px-2 py-0.5 rounded-full text-sm">{{ campaigns.drafts|length }}</span>
            </button>
            <button onclick="showTab('pending')" class="tab-btn pb-4 border-b-2 border-transparent text-gray-500 hover:text-gray-700 font-semibold" data-tab="pending">
                Pending <span class="ml-2 bg-gray-100 text-gray-700 px-2 py-0.5 rounded-full text-sm">{{ campaigns.pending|length }}</span>
            </button>
        </nav>
    </div>

    <!-- Sent Tab -->
    <div id="content-sent" class="tab-content">
        {% if campaigns.sent %}
        <div class="grid gap-4">
            {% for campaign in campaigns.sent %}
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition">
                <div class="flex items-center justify-between">
                    <div class="flex-1">
                        <h3 class="text-lg font-bold text-gray-900">{{ campaign.name }}</h3>
                        <p class="text-gray-600 text-sm mt-1">{{ campaign.subject or 'No subject' }}</p>
                        <div class="flex gap-4 mt-3 text-sm text-gray-500">
                            <span><i class="fas fa-calendar mr-1"></i>{{ campaign.sent_at.strftime('%b %d, %Y') if campaign.sent_at else (campaign.created_at.strftime('%b %d, %Y') if campaign.created_at else 'N/A') }}</span>
                            <span><i class="fas fa-users mr-1"></i>Recipients: {{ "{:,}".format(campaign.recipients|default(0, true)) }}</span>
                        </div>
                    </div>
                    <div class="flex items-center gap-6">
                        <div class="text-center">
                            <div class="text-2xl font-bold text-green-600">{{ "{:,}".format(campaign.emails_sent|default(0, true)) }}</div>
                            <div class="text-xs text-gray-500">Delivered</div>
                        </div>
                        <a href="/dashboard/campaigns/view/{{ campaign.id }}" class="bg-gray-100 hover:bg-gray-200 px-4 py-2 rounded-lg transition text-sm font-medium">View report</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="text-center py-16 bg-white rounded-xl border-2 border-dashed border-gray-300">
            <i class="fas fa-paper-plane text-6xl text-gray-300 mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-700 mb-2">No sent campaigns yet</h3>
            <p class="text-gray-500">Create and send your first campaign to get started</p>
        </div>
        {% endif %}
    </div>

    <!-- Drafts Tab -->
    <div id="content-drafts" class="tab-content hidden">
        {% if campaigns.drafts %}
        <div class="grid gap-4">
            {% for campaign in campaigns.drafts %}
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition">
                <div class="flex items-center justify-between">
                    <div class="flex-1">
                        <h3 class="text-lg font-bold text-gray-900">{{ campaign.name }}</h3>
                        <p class="text-gray-600 text-sm mt-1">{{ campaign.subject or 'No subject yet' }}</p>
                        <div class="flex gap-4 mt-3 text-sm text-gray-500">
                            <span><i class="fas fa-clock mr-1"></i>Created: {{ campaign.created_at.strftime('%b %d, %Y') if campaign.created_at else 'N/A' }}</span>
                            <span class="text-yellow-600"><i class="fas fa-edit mr-1"></i>Draft</span>
                        </div>
                    </div>
                    <div class="flex items-center gap-3">
                        <a href="/dashboard/campaigns/design/{{ campaign.id }}" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg transition text-sm font-medium">
                            <i class="fas fa-edit mr-1"></i> Edit
                        </a>
                        <button onclick="deleteCampaign('{{ campaign.id }}')" class="bg-red-100 hover:bg-red-200 text-red-600 px-4 py-2 rounded-lg transition text-sm font-medium">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="text-center py-16 bg-white rounded-xl border-2 border-dashed border-gray-300">
            <i class="fas fa-file-alt text-6xl text-gray-300 mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-700 mb-2">No drafts</h3>
            <p class="text-gray-500 mb-4">Start creating a new campaign</p>
            <a href="/dashboard/campaigns/create" class="inline-flex items-center gap-2 bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg font-medium">
                <i class="fas fa-plus"></i> Create Campaign
            </a>
        </div>
        {% endif %}
    </div>

    <!-- Pending Tab -->
    <div id="content-pending" class="tab-content hidden">
        {% if campaigns.pending %}
        <div class="grid gap-4">
            {% for campaign in campaigns.pending %}
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-md transition">
                <div class="flex items-center justify-between">
                    <div class="flex-1">
                        <h3 class="text-lg font-bold text-gray-900">{{ campaign.name }}</h3>
                        <p class="text-gray-600 text-sm mt-1">{{ campaign.subject or 'No subject' }}</p>
                        <div class="flex gap-4 mt-3 text-sm text-gray-500">
                            <span><i class="fas fa-clock mr-1"></i>{{ campaign.created_at.strftime('%b %d, %Y') if campaign.created_at else 'N/A' }}</span>
                            <span class="text-orange-600"><i class="fas fa-hourglass-half mr-1"></i>{{ campaign.status|title }}</span>
                        </div>
                    </div>
                    <div class="flex items-center gap-3">
                        <span class="bg-orange-100 text-orange-700 px-3 py-1 rounded-full text-sm font-medium">Queued</span>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="text-center py-16 bg-white rounded-xl border-2 border-dashed border-gray-300">
            <i class="fas fa-clock text-6xl text-gray-300 mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-700 mb-2">No pending campaigns</h3>
            <p class="text-gray-500">Scheduled campaigns will appear here</p>
        </div>
        {% endif %}
    </div>
</div>

<style>
.tab-content.hidden { display: none; }
</style>

<script>
function showTab(tab) {
    // Hide all content
    document.querySelectorAll('.tab-content').forEach(c => c.classList.add('hidden'));
    // Remove active from all tabs
    document.querySelectorAll('.tab-btn').forEach(b => {
        b.classList.remove('active', 'border-green-500', 'text-green-600');
        b.classList.add('border-transparent', 'text-gray-500');
    });
    
    // Show selected content
    document.getElementById('content-' + tab).classList.remove('hidden');
    // Activate tab
    const activeTab = document.querySelector('[data-tab="' + tab + '"]');
    activeTab.classList.add('active', 'border-green-500', 'text-green-600');
    activeTab.classList.remove('border-transparent', 'text-gray-500');
}

function deleteCampaign(id) {
    if (confirm('Are you sure you want to delete this campaign?')) {
        fetch('/dashboard/campaigns/api/delete', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({campaign_id: id})
        }).then(r => r.json()).then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Error: ' + data.error);
            }
        });
    }
}
</script>
{% endblock %}
